# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{css,js,json,ts,tsx}]
indent_style = space
indent_size = 2

[.flake8]
indent_size = 4

[*.{htm,html,md}]
indent_size = 2

[*.py]
indent_size = 4

[*.sql]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2

[{Makefile,**.mk}]
indent_style = tab
indent_size = 4
